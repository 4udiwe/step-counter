<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fadeScrollbars="false"
    android:isScrollContainer="true"
    tools:context=".FragmentMain">

    <TextView
        android:id="@+id/tvDist"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/dist"
        android:textSize="40sp"
        android:layout_marginEnd="80sp"
        android:layout_marginTop="80sp"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="60sp"
        android:text="@string/passed_distance"
        android:textSize="40sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:layout_width="20sp"
        android:layout_height="wrap_content"
        android:text="@string/_0"
        android:textSize="30sp"
        app:layout_constraintTop_toBottomOf="@id/progressBar"
        app:layout_constraintRight_toRightOf="@id/progressBar"
        android:layout_marginEnd="220sp"
        android:layout_marginTop="220sp"
        />

    <TextView
        android:id="@+id/tvTarget"
        android:layout_width="180sp"
        android:layout_height="wrap_content"
        android:text="@string/_0"
        android:textSize="30sp"

        app:layout_constraintBottom_toTopOf="@id/progressBar"

        app:layout_constraintRight_toRightOf="@id/progressBar"
        android:layout_marginEnd="60sp"
        android:layout_marginBottom="220sp"
        />



    <ProgressBar
        android:id="@+id/progressBar"
        style="@android:style/Widget.Holo.ProgressBar.Horizontal"
        android:layout_width="555sp"
        android:layout_height="60sp"
        android:layout_marginTop="80sp"
        android:indeterminate="false"
        android:indeterminateOnly="false"
        android:mirrorForRtl="true"
        android:progressTint="#C36273"
        android:rotation="-90"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="-180sp"
        />

    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
        android:id="@+id/swiperefresh"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp">

        <ListView
            android:id="@android:id/list"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>


</androidx.constraintlayout.widget.ConstraintLayout>